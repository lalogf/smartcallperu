<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Dni</th>
      <th>Dni pic</th>
      <th>Dni pic 2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.last_name %></td>
        <td><%= client.address %></td>
        <td><%= client.dni %></td>
        <td><a target="_blank" href="https://ucarecdn.com/<%= @client.dni_pic %>/">Foto posterior</a></td>
        <td><a target="_blank" href="https://ucarecdn.com/<%= @client.dni_pic_2 %>/">Foto posterior</a></td>
        <td><%= client.contract %></td>
        <td><%= client.publicity %></td>
        <td><%= client.contract %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

